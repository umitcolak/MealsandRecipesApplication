<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.cookbook.screens.login.ui.LoginFragment"
        android:label="Login"
        android:tag="login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_fragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/categoriesFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.android.cookbook.screens.register.ui.RegisterFragment"
        android:label="fragment_register"
        android:tag="register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.android.cookbook.screens.categories.CategoriesFragment"
        android:label="Categories"
        android:tag="categories"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_foodsFragment"
            app:destination="@id/foodsFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodsFragment"
        android:name="com.android.cookbook.screens.foods.FoodsFragment"
        android:label="fragment_foods_list"
        android:tag="foods"
        tools:layout="@layout/fragment_foods">
        <action
            android:id="@+id/action_foodsFragment_to_foodDetailFragment"
            app:destination="@id/foodDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodDetailFragment"
        android:name="com.android.cookbook.screens.detail.FoodDetailFragment"
        android:label="fragment_food_detail"
        android:tag="detail"
        tools:layout="@layout/fragment_food_detail" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.android.cookbook.screens.favorites.FavoritesFragment"
        android:label="fragment_favorites_list"
        android:tag="favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_foodDetailFragment"
            app:destination="@id/foodDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.android.cookbook.screens.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>

</navigation>